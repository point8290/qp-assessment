{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],         
    "experimentalDecorators": true,            
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,     
    "strictPropertyInitialization": false,    
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  }
}